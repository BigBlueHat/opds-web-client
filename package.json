{
  "name": "opds-browser",
  "version": "0.0.1",
  "description": "OPDS browser",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL-Simplified/opds-browser.git"
  },
  "author": "NYPL",
  "license": "Apache-2.0",
  "scripts": {
    "test": "tsc && jest",
    "dev": "npm run dev-serve | npm run dev-build",
    "dev-serve": "NODE_ENV=development node server/index.js",
    "dev-build": "webpack-dev-server --progress --history-api-fallback --hot --content-base build --port 8090 --config webpack.dev.config",
    "prepublish": "typings install && tsc"
  },
  "dependencies": {
    "opds-feed-parser": "^0.0.7",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-redux": "^4.3.0",
    "redux": "^3.2.1",
    "redux-thunk": "^1.0.3"
  },
  "devDependencies": {
    "body-parser": "^1.14.2",
    "jest": "^0.1.40",
    "jest-cli": "^0.8.2",
    "react-addons-test-utils": "^0.14.6",
    "react-hot-loader": "^1.3.0",
    "request": "^2.69.0",
    "ts-loader": "^0.8.0",
    "typescript": "^1.7.5",
    "typings": "^0.6.6",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1"
  },
  "jest": {
    "rootDir": "./lib",
    "testFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "unmockedModulePathPatterns": [
      "../node_modules/*"
    ]
  }
}
